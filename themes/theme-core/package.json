{
  "name": "@marigold/theme-core",
  "version": "23.0.0",
  "description": "Marigold Core Theme",
  "license": "MIT",
  "keywords": [
    "marigold",
    "core",
    "theme",
    "styles"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "./index.css": "./dist/index.css"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/marigold-ui/marigold",
    "directory": "themes/theme-core"
  },
  "peerDependencies": {
    "@marigold/components": "workspace:*"
  },
  "devDependencies": {
    "@marigold/components": "workspace:*",
    "@marigold/tsconfig": "workspace:*",
    "cssnano": "6.0.0",
    "postcss": "8.4.21",
    "postcss-prefix-selector": "1.16.0",
    "tailwind-variants": "0.1.2",
    "tailwindcss": "3.3.1",
    "tsup": "6.7.0"
  },
  "scripts": {
    "build": "tsup src/index.ts --minify",
    "watch": "tsup src/index.ts --watch",
    "clean": "rm -rf node_modules && rm -rf dist"
  }
}
