{
  "name": "@marigold/theme-rui",
  "version": "5.2.0",
  "description": "Marigold RUI Theme",
  "license": "MIT",
  "keywords": [
    "marigold",
    "RUI",
    "theme",
    "styles"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./appearances": {
      "types": "./dist/appearances.d.mts",
      "require": "./dist/appearances.js",
      "import": "./dist/appearances.mjs"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    },
    "./styles.css": "./dist/styles.css",
    "./theme.css": "./dist/theme.css",
    "./mixins.css": "./dist/mixins.css",
    "./global.css": "./dist/global.css"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/marigold-ui/marigold",
    "directory": "themes/theme-rui"
  },
  "devDependencies": {
    "@marigold/tsconfig": "workspace:*",
    "@tailwindcss/postcss": "4.2.1",
    "cross-env": "^10.0.0",
    "cssnano": "7.1.2",
    "postcss-cli": "11.0.1",
    "shx": "^0.4.0",
    "tailwindcss": "4.2.1",
    "tsdown": "0.20.3",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@marigold/components": "workspace:*",
    "@marigold/system": "workspace:*",
    "tailwindcss-animate": "1.0.7",
    "tailwindcss-react-aria-components": "^2.0.1"
  },
  "scripts": {
    "build": "node ./scripts/build-appearances.mjs && cross-env NODE_ENV=production tsdown && postcss -o dist/styles.css src/styles.css && shx cp src/theme.css src/global.css src/utils.css src/variants.css src/ui.css dist/"
  }
}
