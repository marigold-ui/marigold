{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2018",
      "lib": ["es2017", "dom"],
      "jsx": "react",
      "downlevelIteration": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noUnusedLocals": true,
      "skipLibCheck": true
    }
  }
  