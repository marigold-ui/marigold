{
  "name": "@marigold/system",
  "version": "16.1.0",
  "description": "Marigold System Library",
  "license": "MIT",
  "keywords": [
    "marigold",
    "system",
    "library",
    "react",
    "styling",
    "css"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/marigold-ui/marigold",
    "directory": "packages/system"
  },
  "dependencies": {
    "@marigold/types": "workspace:*",
    "@react-aria/i18n": "^3.12.15",
    "class-variance-authority": "0.7.1",
    "deepmerge": "4.3.1",
    "react-fast-compare": "3.2.2",
    "tailwind-merge": "3.4.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.28.6",
    "@marigold/tsconfig": "workspace:*",
    "@types/react": "19.2.7",
    "postcss": "8.5.6",
    "react": "19.2.3",
    "tailwindcss": "4.1.18",
    "tsdown": "0.16.8"
  },
  "scripts": {
    "build": "tsdown src/index.ts",
    "watch": "tsdown src/index.ts --watch",
    "clean": "rm -rf node_modules && rm -rf dist"
  }
}
