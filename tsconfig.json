{
  "extends": "@marigold/tsconfig/react",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@marigold/*": ["./packages/*/src", "./themes/*/src"],
      "~/*": ["docs-next/src/*"]
    }
  },
  "exclude": [
    "coverage/*",
    "jest.config.js",
    "**/node_modules/*",
    "**/dist/**/*",
    "**/scripts/template/*"
  ]
}
