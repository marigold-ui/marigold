{
  "extends": ["config:base", ":semanticCommitTypeAll(chore)"],
  "packageRules": [
    {
      "matchPackagePatterns": ["@react-aria", "@react-stately", "@react-types"],
      "groupName": "react-aria"
    },
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": ["jest", "testing-library"],
      "groupName": "testing"
    },
    {
      "matchPackagePatterns": [
        "rehype",
        "remark",
        "mdx",
        "mdast",
        "vfile",
        "unist"
      ],
      "groupName": "mdx"
    }
  ],
  "timezone": "Europe/Berlin"
}
