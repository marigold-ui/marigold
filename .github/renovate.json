{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)",
    ":rebaseStalePrs"
  ],
  "schedule": ["before 3am on the first day of the month"],
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "minimumReleaseAge": "3 days"
    },
    {
      "matchPackagePatterns": [
        "@react-aria",
        "@react-stately",
        "@react-types",
        "@internationalized",
        "react-aria-components"
      ],
      "groupName": "react-aria"
    },
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": ["jest", "testing-library", "swc"],
      "groupName": "testing"
    },
    {
      "matchPackagePatterns": ["@storybook", "storybook", "vite"],
      "groupName": "storybook"
    },
    {
      "matchPackagePatterns": [
        "rehype",
        "remark",
        "mdx",
        "mdast",
        "vfile",
        "unist"
      ],
      "groupName": "mdx"
    },
    {
      "matchPackagePatterns": ["next", "contentlayer"],
      "groupName": "docs"
    },
    {
      "matchPackagePatterns": ["react-hook-form", "zod"],
      "groupName": "docs-demos"
    },
    {
      "matchPackagePatterns": ["postcss", "tailwind"],
      "groupName": "tailwind"
    },
    {
      "packageRules": [
        {
          "description": "Automerge non-major updates",
          "matchUpdateTypes": ["minor", "patch"],
          "matchCurrentVersion": "!/^0/",
          "automerge": true
        }
      ]
    }
  ],
  "timezone": "Europe/Berlin"
}
