{
  "extends": ["config:base"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on Sunday"]
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": ["jest"],
      "groupName": "jest"
    }
  ],
  "schedule": ["before 3am on the first day of the month"],
  "timezone": "Europe/Berlin"
}
