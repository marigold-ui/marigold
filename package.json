{
  "name": "marigold-repo",
  "version": "0.0.0",
  "repository": "github:marigold-ui/marigold",
  "private": true,
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "packageManager": "pnpm@10.29.3",
  "dependencies": {
    "@babel/core": "7.29.0",
    "@changesets/changelog-git": "0.2.1",
    "@changesets/cli": "2.29.8",
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "9.39.2",
    "@manypkg/get-packages": "3.1.0",
    "@marigold/eslint-config": "workspace:*",
    "@marigold/prettier-config": "workspace:*",
    "@marigold/tsconfig": "workspace:*",
    "@parcel/watcher": "2.5.6",
    "@storybook/addon-a11y": "^10.2.8",
    "@storybook/addon-docs": "^10.2.8",
    "@storybook/addon-vitest": "10.2.8",
    "@storybook/cli": "^10.2.8",
    "@storybook/react-vite": "^10.2.8",
    "@tailwindcss/vite": "4.1.18",
    "@tanstack/react-query": "5.90.21",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "24.9.2",
    "@vitejs/plugin-react": "5.1.4",
    "@vitest/browser-playwright": "4.0.18",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "all-contributors-cli": "6.26.1",
    "autoprefixer": "10.4.24",
    "concurrently": "9.2.1",
    "eslint": "9.39.2",
    "eslint-plugin-storybook": "10.2.8",
    "husky": "9.1.7",
    "playwright": "1.58.2",
    "postcss-import": "16.1.1",
    "postcss-loader": "8.2.0",
    "prettier": "3.8.1",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-select": "5.10.2",
    "storybook": "^10.2.8",
    "storybook-addon-test-codegen": "3.0.1",
    "tailwindcss": "4.1.18",
    "turbo": "2.8.8",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-tsconfig-paths": "6.1.1",
    "vitest": "4.0.18",
    "zx": "8.8.5"
  },
  "scripts": {
    "start": "pnpm --filter @marigold/docs dev",
    "start-fumadocs": "pnpm --filter fumadocs dev",
    "sb": "FOLDERS=packages/components/src,packages/system/src storybook dev -p 6006 -c ./.storybook",
    "build": "turbo run --filter \"@marigold/components...\" --filter \"@marigold/theme*...\" build",
    "build:docs": "turbo run --filter @marigold/docs... build",
    "build:sb": "storybook build --disable-telemetry -c ./.storybook -o storybook-static --stats-json",
    "build:themes": "turbo run --filter \"@marigold/theme*...\" build",
    "registry": "pnpm --filter @marigold/docs registry",
    "build:component-props": "pnpm --filter @marigold/docs build:component-props",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest --config vite.config.ts --project=unit-tests",
    "test:sb": "vitest --config vite.config.ts --project=storybook-tests",
    "clean": "rm -rf `find . -type d -name 'node_modules' -o -name 'dist' -o -name '.next' -o -name '.turbo' -o -name 'storybook-static' -o -name 'coverage'`",
    "clean:build": "rm -rf `find . -type d -name 'dist'` coverage",
    "lint": "eslint . --no-warn-ignored",
    "format": "prettier --write \"**/*\"",
    "format:fix": "prettier --write \"**/*\" --fix",
    "typecheck": "pnpm --filter @marigold/docs build && tsc --noEmit --resolveJsonModule --project tsconfig.check.json",
    "typecheck:only": "tsc --noEmit --resolveJsonModule --project tsconfig.check.json",
    "fd:typecheck": "pnpm --filter fumadocs types:check",
    "contributor": "all-contributors",
    "changeset": "changeset",
    "release:notification": "zx scripts/create-slack-notification.mjs",
    "slack": "zx scripts/slack-release-notification.mjs --quiet",
    "prepare": "husky install",
    "postinstall": "pnpm build"
  },
  "devDependencies": {
    "@vitest/coverage-istanbul": "4.0.18"
  }
}
