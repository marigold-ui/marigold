{
  "name": "marigold-repo",
  "version": "0.0.0",
  "repository": "github:marigold-ui/marigold",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "config/*",
    "docs",
    "packages/*",
    "themes/*"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "0.4.0",
    "@changesets/cli": "2.15.0",
    "@marigold/eslint-config": "*",
    "@marigold/jest-config": "*",
    "@marigold/prettier-config": "*",
    "@marigold/tsconfig": "*",
    "@storybook/react": "6.2.3",
    "@testing-library/jest-dom": "5.12.0",
    "@testing-library/react": "11.2.6",
    "@testing-library/react-hooks": "5.1.2",
    "@types/node": "14.14.43",
    "husky": "6.0.0",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "tsdx": "0.14.1",
    "typescript": "4.2.3",
    "workspaces-run": "1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "start": "start-storybook -p 6005 -c config/storybook",
    "watch": "workspaces-run --only-fs=\"packages/**\" --only-fs=\"themes/**\" --order-by-deps -- yarn watch",
    "build": "workspaces-run --only-fs=\"packages/**\" --only-fs=\"themes/**\" --order-by-deps -- yarn build",
    "docs": "cd docs && yarn start",
    "test": "tsdx test --config jest.config.js --coverage --coverageReporters html",
    "coverage": "tsdx test --config jest.config.js --coverage",
    "clean": "rm -rf `find . -type d -name 'node_modules' -o -name 'dist'`",
    "clean:build": "rm -rf `find . -type d -name 'dist'` coverage",
    "lint": "tsdx lint . --ignore-pattern node_modules --ignore-pattern dist --ignore-pattern packages/types/src/index.ts --ignore-pattern \".cache\" --ignore-pattern public",
    "format": "prettier --write \"**/*\"",
    "typecheck": "tsc --noEmit",
    "release": "yarn build && changeset publish"
  }
}
