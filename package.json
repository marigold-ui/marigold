{
  "name": "marigold-repo",
  "version": "0.0.0",
  "repository": "github:marigold-ui/marigold",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "config/*",
    "packages/*",
    "themes/*"
  ],
  "volta": {
    "node": "12.16.1",
    "yarn": "1.18.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.2.8",
    "@changesets/cli": "2.14.0",
    "@marigold/eslint-config": "*",
    "@marigold/jest-config": "*",
    "@marigold/prettier-config": "*",
    "@marigold/tsconfig": "*",
    "@reach/dialog": "0.13.0",
    "@storybook/storybook-deployer": "2.8.7",
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@testing-library/react-hooks": "5.0.3",
    "@types/node": "14.14.22",
    "@emotion/css": "11.1.3",
    "eslint-config-react-app": "6.0.0",
    "husky": "4.3.8",
    "lerna": "3.22.1",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "shelljs": "0.8.4",
    "ts-node": "9.1.1",
    "tsdx": "0.14.1",
    "typescript": "4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "start": "start-storybook -p 6005 -c config/storybook",
    "watch": "lerna run watch --parallel",
    "build": "lerna run build --stream",
    "test": "tsdx test --config jest.config.js --coverage --coverageReporters html",
    "coverage": "tsdx test --config jest.config.js --coverage",
    "clean": "rm -rf `find . -type d -name 'node_modules' -o -name 'dist'`",
    "clean:build": "rm -rf `find . -type d -name 'dist'` coverage",
    "deploy-storybook": "storybook-to-ghpages",
    "lint": "tsdx lint . --ignore-pattern node_modules --ignore-pattern dist --ignore-pattern scripts/template --ignore-pattern packages/types/src/index.ts",
    "format": "prettier --write \"**/*\"",
    "typecheck": "tsc --noEmit",
    "release": "yarn build && changeset publish",
    "create:component": "ts-node $PWD/scripts/create.ts"
  }
}
