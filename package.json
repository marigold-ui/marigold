{
  "name": "marigold-repo",
  "version": "0.0.0",
  "repository": "github:marigold-ui/marigold",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=16.x"
  },
  "packageManager": "pnpm@7.1.7",
  "dependencies": {
    "@babel/core": "7.17.12",
    "@changesets/changelog-github": "0.4.4",
    "@changesets/cli": "2.22.0",
    "@manypkg/get-packages": "^1.1.3",
    "@storybook/react": "6.5.6",
    "@testing-library/dom": "8.13.0",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "12.1.5",
    "@testing-library/react-hooks": "7.0.2",
    "@testing-library/user-event": "13.5.0",
    "@types/node": "16.11.38",
    "all-contributors-cli": "6.20.0",
    "async-retry": "1.3.3",
    "dotenv": "16.0.0",
    "eslint": "8.16.0",
    "husky": "8.0.1",
    "jest": "28.1.0",
    "jest-environment-jsdom": "28.1.0",
    "prettier": "2.6.2",
    "pretty-quick": "3.1.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "slack-notify": "2.0.2",
    "typescript": "4.7.2",
    "workspaces-run": "1.0.1",
    "zx": "6.1.0"
  },
  "scripts": {
    "start": "pnpm --filter @marigold/docs start",
    "dev": "FOLDERS=packages/components/src,packages/system/src pnpm --filter @marigold/storybook-config start",
    "build": "pnpm --filter \"@marigold/components...\" --filter \"@marigold/theme*...\" build",
    "build:storybook": "pnpm --filter @marigold/storybook-config build",
    "test": "jest --config jest.config.js",
    "test:coverage": "jest --config jest.config.js --coverage --coverageReporters html",
    "test:ci": "jest --config jest.config.js --coverage --ci",
    "test:storybook": "pnpm --filter @marigold/storybook-config test",
    "chromatic": "source .env.local && pnpm --filter @marigold/storybook-config chromatic",
    "chromatic:ci": "pnpm --filter @marigold/storybook-config ci",
    "clean": "rm -rf `find . -type d -name 'node_modules' -o -name 'dist'`",
    "clean:build": "rm -rf `find . -type d -name 'dist'` coverage",
    "lint": "eslint . --ignore-pattern node_modules --ignore-pattern dist --ignore-pattern packages/types/src/index.ts --ignore-pattern \".cache\" --ignore-pattern public",
    "format": "prettier --write \"**/*\"",
    "typecheck": "tsc --noEmit",
    "contributor": "all-contributors",
    "changeset": "changeset",
    "release": "zx scripts/release.mjs --quiet",
    "release:docs": "pnpm --filter @marigold/docs deploy",
    "release:notification": "zx scripts/create-slack-notification.mjs",
    "slack": "zx scripts/slack-release-notification.mjs --quiet",
    "postinstall": "rm -f node_modules/@emotion/core/types/index.d.ts && rm -rf node_modules/.pnpm/@emotion+core@10.3.1_react@17.0.2/node_modules/@emotion/core/types/index.d.ts",
    "prepare": "husky install"
  }
}
