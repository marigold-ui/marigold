{
  "name": "marigold-repo",
  "version": "0.0.0",
  "repository": "github:marigold-ui/marigold",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "config/*",
    "packages/*",
    "themes/*"
  ],
  "engines": {
    "node": ">=10.13.0"
  },
  "devDependencies": {
    "@marigold/eslint-config": "*",
    "@marigold/jest-config": "*",
    "@marigold/prettier-config": "*",
    "@marigold/tsconfig": "*",
    "@storybook/addon-a11y": "5.3.14",
    "@storybook/addon-docs": "5.3.17",
    "@storybook/react": "5.3.17",
    "@storybook/storybook-deployer": "2.8.3",
    "@testing-library/jest-dom": "5.1.1",
    "@testing-library/react": "10.0.1",
    "@testing-library/react-hooks": "3.2.1",
    "babel-loader": "8.0.6",
    "babel-preset-react-app": "9.1.2",
    "husky": "4.2.3",
    "jest": "25.2.1",
    "lerna": "3.20.2",
    "prettier": "2.0.2",
    "pretty-quick": "2.0.1",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "ts-loader": "6.2.2",
    "tsdx": "0.13.0",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "start": "start-storybook",
    "watch": "lerna run watch --parallel",
    "build": "lerna run build --stream",
    "test": "tsdx test --config jest.config.js",
    "coverage": "tsdx test --config jest.config.js --coverage --coverageReporters html",
    "clean": "rm -rf `find . -type d -name 'node_modules' -o -name 'dist'` coverage",
    "deploy-storybook": "storybook-to-ghpages",
    "lint": "tsdx lint packages/*/src/* packages/*/src/*/*",
    "format": "prettier --write \"**/*\"",
    "typecheck": "tsc --noEmit"
  }
}
