{
  "name": "marigold-repo",
  "version": "0.0.0",
  "repository": "github:marigold-ui/marigold",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "config/*",
    "packages/*",
    "themes/*"
  ],
  "volta": {
    "node": "12.16.1",
    "yarn": "1.18.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.2.6",
    "@changesets/cli": "2.9.2",
    "@marigold/eslint-config": "*",
    "@marigold/jest-config": "*",
    "@marigold/prettier-config": "*",
    "@marigold/tsconfig": "*",
    "@storybook/storybook-deployer": "2.8.6",
    "@testing-library/jest-dom": "5.11.2",
    "@testing-library/react": "10.4.8",
    "@testing-library/react-hooks": "3.4.1",
    "@types/node": "14.0.27",
    "eslint-config-react-app": "5.2.1",
    "husky": "4.2.5",
    "lerna": "3.22.1",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "shelljs": "0.8.4",
    "ts-node": "8.10.2",
    "tsdx": "0.13.2",
    "typescript": "3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "start": "start-storybook -p 6005 -c config/storybook",
    "watch": "lerna run watch --parallel",
    "build": "lerna run build --stream",
    "test": "tsdx test --config jest.config.js --coverage --coverageReporters html",
    "coverage": "tsdx test --config jest.config.js --coverage",
    "clean": "rm -rf `find . -type d -name 'node_modules' -o -name 'dist'`",
    "clean:build": "rm -rf `find . -type d -name 'dist'` coverage",
    "deploy-storybook": "storybook-to-ghpages",
    "lint": "tsdx lint . --ignore-pattern node_modules --ignore-pattern dist --ignore-pattern scripts/template",
    "format": "prettier --write \"**/*\"",
    "typecheck": "tsc --noEmit",
    "release": "yarn build && changeset publish",
    "create:component": "ts-node $PWD/scripts/create.ts"
  }
}
